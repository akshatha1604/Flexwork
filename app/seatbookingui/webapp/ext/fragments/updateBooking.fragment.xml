<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core" core:require="{ext:'seatbookingui/ext/controllers/UpdateBooking'}">
    <Dialog title="{modelData>/Property/Title}">
        <content>
            <VBox width="630px" height="240px">
                <VBox>
                    <Text text="Selected Seat Details:" class="sapUiSmallMarginBegin sapUiTinyMarginBottom sapUiTinyMarginTop"/>
                    <HBox class="sapUiSmallMarginBegin sapUiTinyMarginBottom">
                        <Text text="Seat ID:" width='100px'/>
                        <Text text="{modelData>/Property/SelectedSeat}" />
                    </HBox>
                    <HBox class="sapUiSmallMarginBegin sapUiTinyMarginBottom">
                        <Text text="Booked By:" width='100px'/>
                        <Text text="{modelData>/Property/BookedBy}" />
                    </HBox>
                    <HBox class="sapUiSmallMarginBegin sapUiTinyMarginBottom">
                        <Text text="Booking Date:" width='100px'/>
                        <Text text="{modelData>/Property/BookingDate}" />
                    </HBox>
                </VBox>
                <HBox>
                    <RadioButtonGroup buttons="{modelData>/radiobutton}" columns="3" selectedIndex="{modelData>/Property/index}" select="ext.BookingTypeSelection">
                        <buttons>
                            <RadioButton text="{modelData>type}"/>
                        </buttons>
                    </RadioButtonGroup>
                </HBox>
                <HBox class="sapUiSmallMargin" alignContent="Center" alignItems="Center" visible="{modelData>/Property/visibleAssignToElse}">
                   <Text text="Select Teammate" labelFor="ComboBoxEMP" width="130px"/>
                    <ComboBox id="ComboBoxEMP" selectedKey="{modelData>/Property/bookingForOtherEmp}" showSecondaryValues= "true" filterSecondaryValues= "true" items="{
					path: 'modelData>/MyTeamEmpList',
					sorter: { path: '/employeeName' }
				}">
                        <core:ListItem key="{modelData>employeeID}" text="{modelData>employeeName}" additionalText="{modelData>employeeID}" />
                    </ComboBox>
                </HBox>
            </VBox>
        </content>
        <buttons>
            <Button text="Save" type="Default" iconFirst="true" enabled="true" press="ext.saveData"/>
            <Button text="Close" type="Default" iconFirst="true" enabled="true" press="ext.ClosePopup"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>